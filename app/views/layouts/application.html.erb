<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/a166720885.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h4><%= link_to "Bookers", root_path %></h4>
      <ul>
        <% if user_signed_in? %>
          <li>
            <span><i class="fa-solid fa-house-chimney"></i><%= link_to "Home", user_path(current_user.id) %></span>
          </li>
          <li>
            <span><i class="fa-solid fa-users"></i><%= link_to "Users", users_path %></span>
          </li>
          <li>
            <span><i class="fa-solid fa-book-open"></i><%= link_to "Books", books_path %></span>
          </li>
          <li>
            <span><i class="fa-solid fa-right-from-bracket"></i><%= link_to "Log out", destroy_user_session_path, method: :delete %></span>
          </li>
        <% else %>
          <li>
            <span><i class="fa-solid fa-house-chimney"></i><%= link_to "Home", root_path %></span>
          </li>
          <li>
            <span><i class="fa-solid fa-link"></i><%= link_to "About", about_path %></span>
          </li>
          <li>
            <span><i class="fa-solid fa-user-plus"></i> <%= link_to "Sign up", new_user_registration_path %></span>
          </li>
          <li>
            <span><i class="fa-solid fa-right-to-bracket"></i> <%= link_to "Log in", new_user_session_path %></span>
          </li>
        <% end %>
      </ul>
    </header>
    <main>
      <p class="notice"><%= notice %>

      <p class="alert"><%= alert %>
     <%= yield %>
    </main>
    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>

  </body>
</html>
