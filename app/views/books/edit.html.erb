<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-auto">
      <h1>Editing Book</h1>

      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p class="mt-3">Opinion</p>
        <%= f.text_area :body %>
        <div class="actions mt-2">
          <%= f.submit 'Update Book', class: 'btn btn-success' %>
        </div>
      <% end %>
      <div class="mt-3">
        <span><%= link_to 'Show', book_path(@book) %> | </span><span><%= link_to 'Back', book_path %></span>
      </div>
    </div>
  </div>
</div>
