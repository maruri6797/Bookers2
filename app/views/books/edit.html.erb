<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p class="mt-3">Opinion</p>
        <%= f.text_area :body %>
        <div class="actions mt-2">
          <%= f.submit 'Update Book', class: 'btn btn-success' %>
        </div>
      <% end %>
      <div class="mt-3">
        <span><%= link_to 'Show', book_path(@book) %> | </span><span><%= link_to 'Back', books_path %></span>
      </div>
    </div>
  </div>
</div>
