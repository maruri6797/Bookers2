<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tr><th>name</th><td><%= user.name %></td></tr>
    <tr><th>introduction</th><td><%= user.introduction %></td></tr>
  </table>
    <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary w-75 text-secondary' do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <div>
  <% if book.errors.any? %>
  <%= pluralize(book.errors.count, "error") %> prohibited this obj from being saved:
    <ul>
      <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: book do |f| %>
    <p class=>Title</p>
    <%= f.text_field :title %>
    <p class="mt-3">Opinion</p>
    <%= f.text_area :body %>
    <p class="mt-2"><%= f.submit 'Create Book', class: 'btn btn-success' %></p>
  <% end %>