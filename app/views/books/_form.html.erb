<%= render 'layouts/error', obj: book %>
<%= form_with model: book do |f| %>
  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>