<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-auto">
      <h1>Event Mail</h1>
      <%= form_with url: group_event_notices_path(@group), method: :post do |f| %>
        <div class="field">
          <%= f.label :title, "Title" %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :body, "Content" %><br>
          <%= f.text_area :body %>
        </div>
        <div class="field">
          <%= f.submit "送信", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
