<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<p>name</p><span><%= @user.name %></span>
<p>introduction</p><span><%= @user.introduction %></span>
<%= link_to "編集", edit_user_path(@user) %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td><%= image_tag 'no_image.jpg' %></td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      <% end %>
    </tr>
  </tbody>
</table>
