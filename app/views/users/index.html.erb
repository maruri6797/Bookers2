<div class="container">
  <div class="row no-gutters">
    <div class="col-md-3 mx-2">
      <%= render 'books/side_bar', {user: @user, book: @book} %>
    </div>
    <div class="col-md-8 offset-md-1 mx-2">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th class="col-3">image</th>
            <th class="col-5">name</th>
            <th class="col-2"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td>
              <%= link_to "Show", user_path(user) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>