<%= render 'layouts/error',  obj: group %>
<%= form_with model: group do |f| %>
  <div class="field">
    <%= f.label :name, 'グループ名' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :introduction, '紹介文' %><br>
    <%= f.text_area :introduction %>
  </div>
  <div class="field">
    <%= f.label :Image, 'グループ画像' %><br>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="field">
    <%= f.submit class: 'btn btn-secondary' %>
  </div>
<% end %>